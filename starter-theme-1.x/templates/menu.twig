{% if menu %}
	<ul class="navbar-nav ml-auto">
	{% for item in items %}
		<li class="{{ item.classes | join(' ') }} nav-item dropdown">
			<a class="nav-link dropdown-toggle" target="{{ item.target }}" href="{{ item.link }}" data-toggle="dropdown">{{ item.title }}</a>
			{% include "menu.twig" with {'items': item.children} %}
		</li>
	{% endfor %}
	</ul>

{% endif %}
